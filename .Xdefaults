!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             136x71
URxvt.transparent:          false
URxvt.shading:               1
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       15
URxvt.lineSpace:            2
URxvt.externalBorder:	    2
URxvt.borderless:		    false

! Fonts
URxvt.allow_bold:           true
/* URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1 */
URxvt*font: xft:monaco:pixelsize=10
URxvt*boldFont: xft:monaco:pixelsize=10

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher,resize-font,url-select,keyboard-select
URxvt.colorUL:		    #4682b4

! URL-Select
URxvt.url-select.launcher: linkhandler
Urxvt.url-select.underline: true

! Keyboard-Select
URxvt.keysym.M-Escape: perl:keyboard-select:active

! Resize-Font
URxvt.resize-font-smaller:	C-Down
URxvt.resize-font-bigger:	C-Up

! Matcher
URxvt.url-launcher:		linkhandler

URxvt.matcher.button:       1
URxvt.urlLauncher:          firefox

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #cc2929
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!!Source http://github.com/altercation/solarized

*background: #292929
*foreground: #969696
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #cc2929
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1
